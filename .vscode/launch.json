{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Space Invaders (macOS/Linux)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/SpaceInvaders",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "osx": {
                "MIMode": "lldb"
            },
            "linux": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
