	@echo "$(COLOR_GREEN)    Space Invaders - Makefile para Windows$(COLOR_RESET)"
	@echo "$(COLOR_BLUE)â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•$(COLOR_RESET)"
	@echo ""
